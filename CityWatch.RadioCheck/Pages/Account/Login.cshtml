@page
@model CityWatch.Kpi.Pages.Account.LoginModel
@{
}

<div class="m-auto p-4">
    <div class="m-auto card box-shadow p-5 col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.LoginUser.UserName"></label>
                <input asp-for="@Model.LoginUser.UserName" class="form-control">
                <span asp-validation-for="@Model.LoginUser.UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LoginUser.Password"></label>
                <input asp-for="@Model.LoginUser.Password" class="form-control">
                <span asp-validation-for="@Model.LoginUser.Password"></span>
            </div>
            <div asp-validation-summary="All"></div>
            <button type="submit" class="btn btn-primary w-100 mt-3">Login</button>
        </form>
    </div>

    <div class="centered-div mt-5 mb-3" style="width: 75%; margin: 0 auto;">

        <p class="mt-1" style="text-align: center; font-size:12px">
            Data, communication, IP address, location, and audio calls are recorded by this system.<br />
            The data recorded and stored is handled in accordance with local privacy laws<br />
            and are used for legitimate business purposes, including training, compliance, and quality control.
        </p>
        <p style="text-align: center;font-size:12px" class="mb-0">
            By logging into this system, you explicitly consent to the recording and storing of data, communications,<br />and audio calls in accordance with these purposes. End-users
            also agree to use the system honestly, and <br /> refrain from any actions that could sabotage or compromise the integrity of the data.
        </p>
    </div>

</div>
@section PageHeader {
    <h3 class="text-center">RADIO CHECK</h3>
}
