            @*//Linked Duress Start//*@

            <div class="tab-pane fade show  py-3" id="linkedDuress" role="tabpanel" aria-labelledby="linkedDuress-tab" @hideTabStyle>
                <div class="row mt-2">
                    <div class="col-md-12">
                        <div class="card">
