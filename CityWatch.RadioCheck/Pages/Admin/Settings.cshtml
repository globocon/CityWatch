                                        <div class="col-md-3">
                                            <input type="text" class="form-control" id="du_duress_sms" readonly>
                                        </div>
                                        <div class="col-md-3">
                                            <button class="btn btn-success" id="add_GlobalSms">SMS Numbers</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               @* /removed to portal as per request*@
