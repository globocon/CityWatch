<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Demo Site</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Custom Styles -->
    <style id="theme-style">
        body {
            background-color: #f4f7fc;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
        }

        .navbar, .footer {
            background: linear-gradient(135deg, #004aad, #0084ff);
            color: white;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

            .navbar-brand, .nav-link, .footer a {
                color: white !important;
            }

        .navbar-nav .nav-link:hover {
            text-decoration: underline;
        }

        .footer {
            padding: 15px 0;
            margin-top: auto;
            font-size: 14px;
        }

        .search-box {
            width: 250px;
            border-radius: 20px;
            padding: 5px 10px;
        }

        .dropdown-menu {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
        }

            .dropdown-menu li a:hover {
                background-color: #f0f0f0;
            }

        main {
            flex: 1;
            min-height: 60vh;
            padding-bottom: 20px;
        }

        .btn-custom {
            background-color: #0084ff;
            color: white;
            border-radius: 20px;
            padding: 5px 15px;
        }

            .btn-custom:hover {
                background-color: #0070e0;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Demo/Index">
                    <svg width="30" height="30" viewBox="0 0 24 24" fill="white" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2" fill="none"></circle>
                        <path d="M8 12h8" stroke="white" stroke-width="2" stroke-linecap="round"></path>
                        <path d="M12 8v8" stroke="white" stroke-width="2" stroke-linecap="round"></path>
                    </svg>
                    <span class="ms-2">Demo Site</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <input type="text" class="form-control search-box" placeholder="Search...">
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/demo/Index"><i class="bi bi-house-door"></i> Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="formsDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-file-earmark-text"></i> Forms
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/demo/forms/engineeringdata">Engineering Data</a></li>
                                <li><a class="dropdown-item" asp-page="/demo/forms/TrackInspector">Inspector Form</a></li>
                                <li><a class="dropdown-item disabled" href="#">Coordinator Forms</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item disabled" href="#">Logistics Delivery Form</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/demo/admin/AddWorkOrder">Add Work Order</a></li>
                                <li><a class="dropdown-item" asp-page="/demo/admin/AddUserDetails">Add User Details</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="bi bi-gear"></i> Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="bi bi-box-arrow-right"></i> Logout</a>
                        </li>
                        <li class="nav-item d-flex align-items-center ms-3">
                            <i class="bi bi-person-circle text-white me-2" style="font-size: 1.5rem;"></i>
                            <span class="text-white">Welcome, User</span>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="footer text-center">
        <div class="container">
            <span>&copy; @DateTime.Now.Year - Demo Site | <a asp-page="/demo/Privacy" class="text-white text-decoration-none">Privacy</a></span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/jsDemo/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>







