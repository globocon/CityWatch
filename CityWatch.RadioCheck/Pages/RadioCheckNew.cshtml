@page
@model CityWatch.Web.Pages.Radio.RadioCheckNewModel
@{
    ViewData["Title"] = "Radio Check";
    ViewData["PageName"] = "Radio Check";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="col-13 text-right">
                    Auto refresh in <span id="clockRefresh">03 min 00 sec</span>
                    <button type="button" class="btn btn-success" id="btnRefreshActivityStatus"><i class="fa fa-refresh" aria-hidden="true"></i> Refresh Now</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-12">
    </div>
</div>
<!-----------------In Acive List -------------------->

<div class="card">
    <h4 class="card-header">No Activity</h4>
    <div class="card-body" id="events-list">
        <div class="row mt-2">
            <div class="col-md-12">
                <table id="clientSiteInActiveGuards" class="table table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>ClientSiteId</th>
                            <th>Site Name</th>
                            <th>Site Name/Guard</th>
                            <th>Login Time</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ClientSiteId</th>
                            <th>Site Name</th>
                            <th>Site Name/Guard</th>
                            <th>Login Time</th>

                        </tr>
                        <!-- Footer content here (will be styled to look like the header) -->
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-12">
    </div>
</div>
<!----------------- Acive List -------------------->
<div class="card">
    <h4 class="card-header">Activity in Last 2 hrs</h4>
    <div class="card-body" id="events-list">
        <div class="row mt-2">
            <div class="col-md-12">
                <table id="clientSiteActiveGuards" class="table table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>ClientSiteId</th>
                            <th>Site Name</th>
                            <th>Site Name/Guard</th>
                            <th>LB</th>
                            <th>KV</th>
                            <th>IR</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ClientSiteId</th>
                            <th>Site Name</th>
                            <th>Site Name/Guard</th>
                            <th>LB</th>
                            <th>KV</th>
                            <th>IR</th>
                        </tr>
                        <!-- Footer content here (will be styled to look like the header) -->
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<!----------------- Guard Details Modal -------------------->

<div class="modal fade" id="guardInfoModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="guardInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered  modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-vcard-o mr-2"></i>Guard Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <ul class="list-unstyled col-md-12">
                        <li class="row">
                            <label class="col-md-5 col-form-label">Guard Name: </label>
                            <label class="col-form-label" id="lbl_guard_name"></label>
                        </li>
                        <li class="row">
                            <label class="col-md-5 col-form-label">Security No: </label>
                            <label class="col-form-label" id="lbl_guard_security_no"></label>
                        </li>
                        <li class="row">
                            <label class="col-md-5 col-form-label">State: </label>
                            <label class="col-form-label" id="lbl_guard_state"></label>
                        </li>
                        <li class="row">
                            <label class="col-md-5 col-form-label">Mobile: </label>
                            <label class="col-form-label" id="lbl_guard_mobile"></label>
                        </li>
                        <li class="row">
                            <label class="col-md-5 col-form-label">Email: </label>
                            <label class="col-form-label" id="lbl_guard_email"></label>
                        </li>
                        <li class="row">
                            <label class="col-md-5 col-form-label">Provider:</label>
                            <label class="col-form-label" id="lbl_guard_provider"></label>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
@section PageHeader {
    <h3 class="text-center">RADIO CHECK</h3>
    }
@Html.AntiForgeryToken()
