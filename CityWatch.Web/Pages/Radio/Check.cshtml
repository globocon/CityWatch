@page
@model CityWatch.Web.Pages.Radio.CheckModel
@inject CityWatch.Web.Services.IViewDataService viewDataService
@{
    ViewData["Title"] = "Radio Check";
    ViewData["PageName"] = CityWatch.Web.Helpers.PageNameHelper.RadioCheck;
}
<div id="rcloader"></div>
<div class="full-width">
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-2">
                <label class="mx-1" for="rcClientType">Client Type</label>
                <select class="form-control mx-1" id="rcClientType" asp-items="@viewDataService.GetUserClientTypes(null)"></select>
            </div>
            <div class="form-group col-md-2">
                <label class="mx-1" for="rcClientSiteId">Client Sites</label>
                <select class="form-control mx-1" id="rcClientSiteId" multiple="multiple"></select>
            </div>
        </div>
    </form>
    <div class="py-2 border-top" id="week-nav-controls" style="display:none">
        <div class="d-flex flex-row">
            <div class="btn-group" role="group" aria-label="Radio check status nav controls">
                <button type="button" class="btn btn-sm btn-outline-primary" id="btnPreviousWeekRadioStatus"><i class="fa fa-angle-double-left mr-2"></i>Previous</button>
                <button type="button" class="btn btn-sm btn-outline-primary" id="btnCurrentWeekRadioStatus"><i class="fa fa-calendar mr-2"></i>This Week</button>
                <button type="button" class="btn btn-sm btn-outline-primary" id="btnNextWeekRadioStatus">Next<i class="fa fa-angle-double-right ml-2"></i></button>
            </div>
            <p class="font-weight-bold mb-0 ml-3" id="selectedWeekInfo"></p>
        </div>
        <input type="hidden" id="selectedWeekStart" value="">
    </div>
    <table id="weekly_radio_checklist" class="table table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th style="min-width: 200px;vertical-align: middle;" rowspan="2">Site Name</th>
                <th colspan="3">Monday</th>
                <th colspan="3">Tuesday</th>
                <th colspan="3">Wednesday</th>
                <th colspan="3">Thursday</th>
                <th colspan="3">Friday</th>
                <th colspan="3">Saturday</th>
                <th colspan="3">Sunday</th>
            </tr>
            <tr class="rc-header-row-2">
                <th>Sign-On <br />Check 1</th>
                <th>Radio <br />Check 2</th>
                <th>Radio <br />Check 3</th>
                <th>Sign-On <br />Check 1</th>
                <th>Radio <br />Check 2</th>
                <th>Radio <br />Check 3</th>
                <th>Sign-On <br />Check 1</th>
                <th>Radio <br />Check 2</th>
                <th>Radio <br />Check 3</th>
                <th>Sign-On <br />Check 1</th>
                <th>Radio <br />Check 2</th>
                <th>Radio <br />Check 3</th>
                <th>Sign-On <br />Check 1</th>
                <th>Radio <br />Check 2</th>
                <th>Radio <br />Check 3</th>
                <th>Sign-On <br />Check 1</th>
                <th>Radio <br />Check 2</th>
                <th>Radio <br />Check 3</th>
                <th>Sign-On <br />Check 1</th>
                <th>Radio <br />Check 2</th>
                <th>Radio <br />Check 3</th>
            </tr>
        </thead>
    </table>
</div>

<div class="modal fade" id="selectRadioCheckStatus" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="selectRadioCheckStatusLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Radio Check Status</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-form-label" for="selectRadioStatus">Select Radio Check Status</label>
                    <select id="selectRadioStatus" class="form-control">
                        <option value="" selected>Select</option>
                        <option value="N/A">N/A</option>
                        <option value="N/A Only W/E">N/A Only W/E</option>
                        <option value="N/A Only Summer">N/A Only Summer</option>
                        <option value="On Standby">On Standby</option>
                        <option value="Incoming Call">Incoming Call</option>
                        <option value="Outgoing Call Radio">Outgoing Call Radio</option>
                        <option value="Outgoing Call Mobile">Outgoing Call Mobile</option>
                        <option value="No Answer">No Answer</option>
                    </select>
                    <input type="hidden" id="clientSiteId" value="" />
                    <input type="hidden" id="colIndex" value="" />
                </div>
            </div>
            <div class="modal-footer justify-content-start">
                <button type="button" id="btnSaveRadioStatus" class="btn btn-primary">Save Status</button>
            </div>
        </div>
    </div>
</div>

@section PageHeader {
    <h3 class="text-center">RADIO CHECKLIST</h3>
}