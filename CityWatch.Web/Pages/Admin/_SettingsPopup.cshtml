<!-- user modal -->
<div class="modal" tabindex="-1" role="dialog" id="user-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-user" aria-hidden="true"></i> Manage User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" id="userId" value="">
                    <div class="form-group row">
                        <label for="userName" class="col-sm-4 col-form-label">User Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="userName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="userPassword" class="col-sm-4 col-form-label">Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="userPassword">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="userConfirmPassword" class="col-sm-4 col-form-label">Confirm Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="userConfirmPassword">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8">
                            <span id="user-modal-validation" class="text-danger hide"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSaveUser" class="btn btn-outline-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<!-- user access control modal -->
<div class="modal" tabindex="-1" role="dialog" id="user-client-access-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-user" aria-hidden="true"></i> Manage User Client Site Access</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="user-access-for-id" value="0" />
                <button type="button" id="grantAllUserAccess" class="btn btn-light">Grant All</button>
                <button type="button" id="revokeAllUserAccess" class="btn btn-light">Revoke All</button>
                <button type="button" id="expandAllUserAccess" class="btn btn-light">Expand All</button>
                <button type="button" id="collapseAllUserAccess" class="btn btn-light">Collapse All</button>
                <hr />
                <div id="ucaTreeView"></div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSaveUserAccess" class="btn btn-outline-primary" data-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Tool modal -->
<div class="modal" tabindex="-1" role="dialog" id="tools-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add  Button</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group row">
                        <label for="pageType" class="ml-3 col-form-label">Button</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="pageType">
                        </div>
                        <button type="button" id="btnSavePageType" class="btn btn-outline-primary">Save</button>
                    </div>
                    <table class="table gj-grid gj-grid-bootstrap gj-grid-bootstrap-4 table-bordered table-sm" id="tools_settings">
                        <thead>
                            <tr data-role="caption">
                                <th data-field="title" width="80%" style="text-align: left;">
                                    <div data-role="title">Button</div>
                                </th>
                                <th data-field="" width="20%" style="text-align: center;">
                                    <i class="fa fa-cogs" aria-hidden="true"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2" class="p-0 b-0">
                                    <ul id="itemList" class="list-group d-block w-auto">
                                        @if (@Model.ClientDataProvider.GetSiteLinksPageTypes() != null)
                                        {

                                            foreach (var item in @Model.ClientDataProvider.GetSiteLinksPageTypes())
                                            {
                                                <li class="list-group-item" id="attach_@item.Id" data-index="@item.Id" style="border-left: 0;border-right: 0;">
                                                    @item.PageTypeName
                                                    <i class="fa fa-trash-o ml-2 text-danger btn-delete-tools-type" title="Delete" style="cursor: pointer;float:right"></i>

                                                </li>

                                            }
                                        }
                                    </ul>
                                </td>
                            </tr>

                        </tbody>
                    </table>

                    <div class="form-group row">
                        <div class="col-sm-8">
                            <span id="pageType-modal-validation" class="text-danger hide"></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>