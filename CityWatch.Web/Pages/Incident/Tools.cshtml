@page
@model CityWatch.Web.Pages.Incident.ToolsModel
@{
    ViewData["Title"] = "CityWatch Security | Tools";
    ViewData["PageName"] = CityWatch.Web.Helpers.PageNameHelper.Tools;
}

<div class="row mt-3">
    <div class="col-md-12 ">
        @if (!string.IsNullOrEmpty(HttpContext.Request.Query["st"]) && !string.IsNullOrEmpty(HttpContext.Request.Query["type"]))
        {

            int a;
            if (int.TryParse(HttpContext.Request.Query["type"].ToString(), out a))
            {

                
                <h4>@Model.ClientDataProvider.GetSiteLinksTypeUsingId(int.Parse(HttpContext.Request.Query["type"].ToString()))</h4>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    Please select the page Type
                </div>
            }

        }
        <table class="table" id="file_Tools"></table>
    </div>
</div>

@section PageHeader {
    <h3 class="text-center">Tools</h3>
}
