@page
@model CityWatch.Web.Pages.Incident.NotifyModel
@{
    ViewData["Title"] = "CityWatch Security | IR Status";
    ViewData["PageName"] = CityWatch.Web.Helpers.PageNameHelper.Notify;
}

@if (string.IsNullOrEmpty(@Model.ErrorMessage))
{
    <div class="container text-center">
        <p>
            <h4>Incident Report Submitted Successfully</h4>
            <a href="@Model.FilePath" target="_blank" class="btn btn-success btn-lg">Download Report</a>
        </p>
        <p>
            <a href="/Incident/Register?reuse=yes" class="btn btn-outline-success btn-lg"><i class="fa fa-play-circle" aria-hidden="true"></i> Re-use content for another IR ?</a>
        </p>
        <p class="pt-2">
            <h4>Thank You!</h4>
            <h5>Your report has automatically been emailed to CityWatch HQ,<br>and where applicable, also to the client.</h5>
            <img src="~/images/warning.png" alt="Warning" width="100" height="100" />
            <h6>Subject to site SOP's, some events will require the Client to be called <br>on their mobile or SMS sent to client to alert them (ie: FIRE issue, EPA issue, Flood, Break In etc)</h6>
            <br>
            <h6>&nbsp; Some incidents can be traumatic and stressful. Under "Tools" <br> Hyperlink on system - all guards have access to Mental Health <br> Support Weblinks and confidential Employee Assistant Programs (EAP)</h6>
        </p>
    </div>
}
else
{
    <div class="container text-center">
        <h3><i class="fa fa-exclamation-triangle mr-2 text-danger"></i>Something went wrong</h3>
        <p>There were some errors while processing this request. So, the operation is not complete.</p>
        <h5 class="mt-4">Error details:</h5>
        <pre>@Model.ErrorMessage</pre>

        @if (Model.ReportGenerated)
        {
            <div class="mt-3">
                <hr />
                <p>However, the incident report is generated and ready to dowload.</p>
                <a href="@Model.FilePath" target="_blank" class="btn btn-success btn-lg">Download Report</a>
            </div>
            /* New button for Re-use Start*/
            <div class="mt-3">
                <a href="/Incident/Register?reuse=yes" class="btn btn-outline-success btn-lg"><i class="fa fa-play-circle" aria-hidden="true"></i> Re-use content for another IR ?</a>
            </div>
            /* New button for Re-use end*/
        }
    </div>
}



